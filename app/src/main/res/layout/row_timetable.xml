<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:padding="10dp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:elevation="3dp"
            card_view:cardCornerRadius="5dp">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout

        android:padding="5dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timetable_period"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period 1"
            android:textColor="@color/news_row"
            android:textSize="28dp"
            android:textStyle="italic"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/timetable_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8:30-9:30"
            android:textColor="@color/news_body"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:background="@color/caldroid_gray">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:paddingLeft="5dp"
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timetable_subject"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hindi"
            android:textSize="16sp"
            android:textColor="@color/dot_light_screen1"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 min"
            android:textSize="14sp"
            android:textColor="@color/news_row"/>
    </RelativeLayout>
    <LinearLayout
       android:orientation="vertical"
       android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/teacher_name"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Girirk Infotecgh"
            android:textSize="14sp"
            android:textColor="@color/msg_line"/>
        <TextView
            android:id="@+id/room_no"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B3B001"
            android:textSize="14sp"
            android:textColor="@color/dot_light_screen1"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>